<!DOCTYPE html>
<html>
  <head>
    <title>iikoto</title>
  </head>
  <body>
    <% if flash[:error] %>
    <span class="flash">
      <%= flash[:error] %>
    </span>
    <% end %>
    <h1>Boards:</h1>
    <ul>
      <% for board in boards %>
	<li>
	  <a href=<%= "/#{board.route}" %>>
	    <%= "/#{board.route}/ - #{board.name}" %>
	  </a>
	</li>
      <% end %>
    </ul>
  </body>
</html>
